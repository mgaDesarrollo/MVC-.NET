@{
    ViewBag.Title = "Index";
}

<h2>Registrar Usuario</h2>

<form method="post" action="@Url.Action("Registrar")">
    <fieldset>
        <p><label>Nombre:</label><input type="text" name="Nombre" /></p>
        <p><label>Apellido:</label><input type="text" name="Apellido" /></p>
        <p><label>Email:</label><input class="email" name="Email" /></p>
        <p><label>Nombre de Usuario:</label><input type="text" name="NombreUsuario" /></p>
        <p><label>Contraseña:</label><input type="password" name="ClaveAcceso" /></p>
        <p><label>Rol:</label> <select name = "RolUsuario">
        <option value ="Operador">Operador</option>
        <option value="Administrador">Administrador</option>
        </select></p>

        <input type="submit" value="Registrar" />
    </fieldset>
</form>
