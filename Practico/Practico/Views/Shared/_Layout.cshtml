    @{
    var usuarioactual = Session["usuarioactual"] as Practico.Models.UserModel;
 }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<ul>
    <li><a>@Html.ActionLink("Login", "Index", "Home")</a></li>
    <li><a>@Html.ActionLink("Registro", "Index", "Usuarios")</a></li>
    <li><a>@Html.ActionLink("Lista de Usuarios", "ListaDeUsuarios", "Usuarios")</a></li>
    <li><a>@Html.ActionLink("About", "About", "Home")</a></li>
    <li><a>@Html.ActionLink("Pagina Restringida", "Index", "PaginaRestringida")</a></li>
    <li><a>@Html.ActionLink("Salir", "logOut", "Home")</a></li>
</ul>

<body>

        @if (usuarioactual != null)
        { 
                 <h4>Usuario: @usuarioactual.NombreUsuario </h4>
                <h4>Rol: @usuarioactual.RolUsuario </h4>
        }
        else
        { 
                <h4>No Conectado</h4>
        }
          
    @RenderBody()


</body>

</html>
